{
  "manifest_version": 3,
  "name": "QuietSignal Overlay",
  "version": "0.1.0",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": { "default_popup": "popup.html" },
  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["contentScript.js"], "run_at": "document_idle" }
  ]
}